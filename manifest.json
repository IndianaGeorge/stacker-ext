{
    "manifest_version": 3,
    "name": "CSS Injector",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["styles.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  