{
    "manifest_version": 3,
    "name": "Stacker",
    "version": "1.0.0",
    "description": "Visualize markup structure quickly",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
      "default_icon": {
        "16": "disabled16.png",
        "48": "disabled48.png",
        "128": "disabled128.png"
      },
      "default_title": "Stacker"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["styles.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  